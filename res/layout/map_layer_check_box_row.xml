<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <CheckBox android:id="@+id/map_layer_row_check_box"
    	android:layout_marginLeft="@dimen/map_layer_row_margin_left"
    	android:layout_marginTop="@dimen/map_layer_row_margin_left"
    	android:layout_marginStart="@dimen/map_layer_row_margin_left" 
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"/>
    
    <TextView android:id="@+id/map_layer_row_text_view" 
        android:layout_marginLeft="@dimen/map_layer_row_margin_left"
    	android:layout_marginTop="@dimen/map_layer_row_margin_left"
    	android:layout_marginStart="@dimen/map_layer_row_margin_left" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</TableRow>